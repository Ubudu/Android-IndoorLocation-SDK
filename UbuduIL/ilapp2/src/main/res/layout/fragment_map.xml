<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <com.ubudu.gmaps.MapLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            android:gravity="end"
            android:visibility="gone">


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/calibrate_twr_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="&#xf044;"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="10dp"
                fancy:fb_text=""
                fancy:fb_textColor="@color/colorPrimaryDark" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/calibrate_attractor_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="&#xf1aa;"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="10dp"
                fancy:fb_text=""
                fancy:fb_textColor="@color/colorPrimaryDark" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/calibrate_pf_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="&#xf192;"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="10dp"
                fancy:fb_text=""
                fancy:fb_textColor="@color/colorPrimaryDark" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/calibrate_user_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="&#xf183;"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="10dp"
                fancy:fb_text=""
                fancy:fb_textColor="@color/colorPrimaryDark" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/draw_path_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="&#xf018;"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="10dp"
                fancy:fb_text=""
                fancy:fb_textColor="@color/colorPrimaryDark" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/go_to_my_position"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                fancy:fb_fontIconResource="&#xf05b;"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="10dp"
                fancy:fb_text=""
                fancy:fb_textColor="@color/colorPrimaryDark" />

            <!--<mehdi.sakout.fancybuttons.FancyButton-->
                <!--android:id="@+id/uwb_button"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginStart="8dp"-->
                <!--fancy:fb_borderColor="@color/colorPrimaryDark"-->
                <!--fancy:fb_borderWidth="1dp"-->
                <!--fancy:fb_defaultColor="@color/colorPrimary"-->
                <!--fancy:fb_focusColor="@color/colorAccent"-->
                <!--fancy:fb_fontIconSize="20dp"-->
                <!--fancy:fb_iconPosition="left"-->
                <!--fancy:fb_radius="10dp"-->
                <!--fancy:fb_text="uwb"-->
                <!--fancy:fb_textColor="@color/colorPrimaryDark" />-->

        </LinearLayout>

        <com.ubudu.ilapp2.view.TwrCalibrationView
            android:id="@+id/twr_calibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons"
            android:layout_marginTop="8dp"/>

        <com.ubudu.ilapp2.view.UserHeightAndGenderConfigurationView
            android:id="@+id/user_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons"
            android:layout_marginTop="8dp"/>

        <com.ubudu.ilapp2.view.ParticleFilterConfigurationView
            android:id="@+id/particle_filter_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons"
            android:layout_marginTop="8dp"/>

        <com.ubudu.ilapp2.view.AttractorCalibrationView
            android:id="@+id/attractor_calibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/loading_label"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/partially_transparent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_loading"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@null"
                android:src="@drawable/loading"
                android:scaleType="fitCenter"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/loading_label_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:text="@string/loading"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>